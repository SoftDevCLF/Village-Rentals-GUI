                            </tr>
                            <tr>
                                <td class="border rounded-3 py-2 px-3">Phone Number: @#.PhoneNumber</td>
                            </tr>
                            <tr>
                                <td class="border rounded-3 py-2 px-3">Email: @#.Email</td>
                            </tr>
                            <tr>
                                <td class="border rounded-3 py-2 px-3">Discount: @#.Discount%</td>
                            </tr>
                            <tr>
                                <td class="border rounded-3 py-2 px-3"> Customer Status: @(#.IsBanned ? "Banned" : "Active")</td> 
                            </tr>
                        </tbody>
                    </table>

                    <div>
                    <button class="btn btn-primary mt-6">Go Back to Customer Management</button> @* put @onclick="GoToCustomerPage"
                    </div>
                    }
            *@
        </div>

    </div>

</div>



