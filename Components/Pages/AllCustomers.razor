@page "/allcustomers"
@using VillageRentalsGUI.Data
@inject NavigationManager Navigation
@inject JsonStorageService Storage

<h1>All Customers</h1>
<hr />

<div class="mb-4">
	<button class="btn btn-primary mt-4" @onclick="GoToCustomerPage">Go Back to Customer Management</button>
</div>

@if (allCustomers.Count > 0)
{
	<table class="table">
		<thead>
		<tr class="text-primary">
			<th>Customer ID</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Email</th>
			<th>Phone Number</th>
			<th>Customer Status</th>
			<th>Discount</th>
		</tr>
		</thead>
		<tbody>
		@foreach (var customer in allCustomers)
		{
			<tr class="table-hover">
				<td>@customer.CustomerID</td>
				<td>@customer.FirstName</td>
				<td>@customer.LastName</td>
				<td>@customer.Email</td>
				<td>@customer.PhoneNumber</td>
				<td>
					@if (customer.IsBanned)
					{
						<span class="text-danger">Banned</span>
					}
					else
					{
						<span>Active</span>
					}
				</td>
				<td>@($"{customer.Discount}%")</td>
			</tr>
		}
		</tbody>
	</table>
}
else
{
	<p>No customers found.</p>
}


@code {
	List<Customer> allCustomers = new List<Customer>();
	string jsonFileName = "customers.json";

	protected override void OnInitialized()
	{
		allCustomers = Storage.LoadFromJsonSync<Customer>(jsonFileName);
	}

	private void GoToCustomerPage()
	{
		Navigation.NavigateTo("/customergui");
	}
}